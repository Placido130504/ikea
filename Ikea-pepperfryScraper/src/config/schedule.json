    },
    {
      "name": "monthly_full_scan",
      "enabled": false,
      "cron": "0 3 1 * *",
      "description": "Run on 1st of each month at 3 AM IST"
    }
  ],
  "maintenance": {
    "cleanupLogs": true,
    "logRetentionDays": 30,
    "cleanupBackups": true,
    "backupRetentionDays": 90
